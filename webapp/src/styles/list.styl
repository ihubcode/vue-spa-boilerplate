@import "./utils/variables";
@import "./utils/mixins";

.order-view {
	overflow: hidden;
	padding: 0 !important;
	.orders {
		th,td {

			&:first-child {
				text-align: left;
				padding-left: 3%;
			}
			&:nth-child(2) {
				padding-left: 0.5%;
			}
			.icon-check {
				color: $color-green;
				font-size: 2.5rem;
				line-height: 1;
				vertical-align: middle;
			}

			.pay-button {
				padding: 0;
			}
		}
	}
}
